@model Model.User
@{
    Layout = null;
}


<style>
    .container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        margin: 0;
    }

    .display-block {
        display: block
    }

    .border-5-solid-red {
        border: 5px solid red;
    }

    .text-center {
        text-align: center;
    }

    .bg-grey {
        background-color: grey;
    }

    .border-radius-10 {
        border-radius: 10px;
    }

    .bg-cyan {
        background-color: cyan
    }

    .bg-light-cyan {
        background-color: lightcyan
    }

</style>

@Styles.Render("~/Content/css")
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="container bg-cyan">
        <div class="p-2 bg-light-cyan border-radius-10">
            <h3 class="text-center">Task Flow</h3>
            <div class="m-3">
                @Html.TextBoxFor(user => user.UserName, new { @placeholder = "Enter username", @type = "text" })
            </div>
            <div class="m-3">
                @Html.TextBoxFor(user => user.UserPassword, new { @placeholder = "Enter password", @type = "password" })
            </div>
            <div class="m-3 text-center">
                <button type="submit">Login</button>
            </div>
        </div>
    </div>
}


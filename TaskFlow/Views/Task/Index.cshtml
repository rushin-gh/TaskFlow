@model Model.User
<div class="width-100">
    <div>
        <h3 class="text-center">Task List</h3>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th width="5%" style="text-align: center" scope="col">#</th>
                <th scope="col">Task Desc</th>
            </tr>
        </thead>
        <tbody>
            @{
                var taskNo = 1;
            }
            @foreach (var task in Model.TaskList)
            {
                <tr>
                    <td style="text-align: center" scope="row">@(taskNo++)</td>
                    <td>@task.TaskDesc</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end">
        <button class="btn btn-danger">Add Task</button>
    </div>
</div>